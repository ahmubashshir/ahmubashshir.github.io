{
    "$schema": "https://json.schemastore.org/web-manifest-combined.json",
    "name": "{{ $.Site.Title }}",
    "description": "{{ $.Site.Params.description }}",
    "short_name": "{{ $.Site.Title }}",
    "start_url": "/",
    "scope": "/",
    "icons": [
        {
            "src": "/assets/image/android-chrome-192x192.png?v={{ $.Site.Params.assets.vtag }}",
            "sizes": "192x192",
            "type": "image/png"
        },
        {
            "src": "/assets/image/android-chrome-512x512.png?v={{ $.Site.Params.assets.vtag }}",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any maskable"
        }
    ],
    "theme_color": "{{ $.Site.Params.pwa.color }}",
    "orientation": "{{ $.Site.Params.pwa.orientation }}",
    "background_color": "{{ $.Site.Params.pwa.bgColor }}",
    "display": "{{ $.Site.Params.pwa.display }}",
    "shortcuts": [
        {{- range .Site.Menus.main }}
        {
            "name": "{{ .Name }}",
            "description": "{{ .Title | default .Name }}",
            "url": "{{ .URL | relLangURL }}",
        },
        {{- end }}
    ],
    "categories": [
        {{- range $.Site.Params.keywords }}"{{ . }}",{{- end }}
    ]
}
